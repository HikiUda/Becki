model Authors {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    mangas    Manga[]
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Artists {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    mangas    Manga[]
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Publishers {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    mangas    Manga[]
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}
